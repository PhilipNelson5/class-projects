%!PS
%
% Generates Hypotrochoids
%

/inch {72 mul} def
/c {255 div} def
/background { setrgbcolor 8.5 inch 11 inch rect fill } def

/rect 
{
	/h exch def
	/w exch def
	newpath
	0 0 moveto
	0 h lineto
	w h lineto
	w 0 lineto
	closepath
} def

/hypo
{ % Rad, rad, dist

	/x exch def
	/d exch def
	/r exch def
	/R exch def

	newpath
	0 1 360 x mul
	{
		/th exch def

		R r sub th cos mul R r sub r div th mul cos d mul add
		R r sub th sin mul R r sub r div th mul sin d mul sub

	th 0 eq { moveto } { lineto } ifelse 

} for

} def


/pokeball {
	8.5 2 div inch 11 2 div inch translate
	.5 .5 scale
	/step .001 def 0 step 1
	{
		/i exch def

		1 i sub 1 i sub 1 setrgbcolor
		i 360 mul 1 step div div rotate
		6 inch 3 inch 5 inch 5 hypo stroke

	} for
} def

/5star {
	8.5 2 div inch 11 2 div inch translate
	.5 .5 scale

	/step .001 def 0 step 1
	{
		/i exch def

		i 1 i sub .5 setrgbcolor
		i 360 mul 1 step div div 2.5 div rotate
		5 inch 3 inch 5 inch 5 hypo stroke

	} for
} def

/5star2 {
	/step .001 def 0 step 1
	{
		/i exch def

		i .5 lt
		{
			i i .5 setrgbcolor
		}
		{
			1 i sub i .5 setrgbcolor
		} ifelse
		i 360 mul 1 step div div 2.5 div rotate
		5 inch 3 inch 5 inch 5 hypo stroke

	} for
} def

/7flower {
	grestore
	8.5 2 div inch 11 2 div inch translate
	.45 .45 scale
	%/step .0025 def 0 step .8
	/step .00025 def 0 step .8
	{
		/i exch def

		i .8 step 3 mul sub gt
		{ 
			255 c 83 c 0 c setrgbcolor 
		}
		{ 
			i 0 0 setrgbcolor 
		} ifelse

		i 360 mul 1 step div div 3.5 div rotate
		7 inch 3 inch 5 inch 5 hypo stroke

	} for
} def

/web {
	8.5 2 div inch 11 2 div inch translate
	3 3 scale

	/step .001 def 0 step 1
	{
		/i exch def

		i 0 0 setrgbcolor
		i 360 mul 1 step div div 50 div 45 add rotate
		1 inch 1 3 div inch 1 3 div inch 1 hypo stroke

	} for

	.325 .325 scale
	/step .001 def 0 step 1
	{
		/i exch def

		i 0 0 setrgbcolor
		%1 i 119 c add i setrgbcolor
		i 360 mul 1 step div div 2 div rotate
		1 inch 1 4 div inch 1 4 div inch 1 hypo fill

	} for
} def

/starFlower {
	8.5 2 div inch 11 2 div inch translate
	1 1 scale
	/step .001 def 0 step 1
	{
		/i exch def

		i 0 0 setrgbcolor
		i 360 mul 1 step div div 2.5 div rotate
		1 inch 2 5 div inch 1 inch 5 hypo stroke

	} for
} def

/web2 {
	8.5 2 div inch 11 2 div inch translate
	.075 .075 scale
	/step .01 def 0 step 1
	{
		/i exch def

		1 i sub 1 i sub 1 setrgbcolor
		i 360 mul 1 step div div 90 div rotate
		35 inch 12 inch 30 inch 15 hypo stroke

	} for
} def

0 0 0 background

web2
grestore
7flower

showpage
